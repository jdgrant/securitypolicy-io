{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "MAILGUN_SMTP_HOST": "@mailgun_smtp_host",
    "MAILGUN_SMTP_USER": "@mailgun_smtp_user",
    "MAILGUN_SMTP_PASS": "@mailgun_smtp_pass"
  }
} 